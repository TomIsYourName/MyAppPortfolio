<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/activity_main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="com.tomisyourname.myappportfolio.MainActivity">

  <TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:textSize="20sp"
    android:textColor="@color/default_text_color"
    android:text="@string/my_nanodegree_apps" />

  <Button
    android:id="@+id/btn_spotify_sctream"
    android:layout_width="180dp"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/tv_title"
    android:layout_marginTop="16dp"
    android:onClick="onClick"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:text="@string/spotify_streamer" />

  <Button
    android:id="@+id/btn_scores_app"
    android:layout_width="180dp"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/btn_spotify_sctream"
    android:layout_marginTop="16dp"
    android:onClick="onClick"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:text="@string/scores_app" />

  <Button
    android:id="@+id/btn_library_app"
    android:layout_width="180dp"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/btn_scores_app"
    android:layout_marginTop="16dp"
    android:onClick="onClick"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:text="@string/library_app" />

  <Button
    android:id="@+id/btn_build_it_bigger"
    android:layout_width="180dp"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/btn_library_app"
    android:layout_marginTop="16dp"
    android:onClick="onClick"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:text="@string/build_it_bigger" />

  <Button
    android:id="@+id/btn_xyz_reader"
    android:layout_width="180dp"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/btn_build_it_bigger"
    android:layout_marginTop="16dp"
    android:onClick="onClick"
    android:padding="16dp"
    android:background="@color/colorPrimary"
    android:text="@string/xyz_reader" />

  <Button
    android:id="@+id/btn_capstone"
    android:layout_width="180dp"
    android:layout_height="48dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/btn_xyz_reader"
    android:layout_marginTop="16dp"
    android:onClick="onClick"
    android:padding="16dp"
    android:background="@color/capstone_button"
    android:text="@string/capstone" />


</RelativeLayout>
